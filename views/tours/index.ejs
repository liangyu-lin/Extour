<% layout('layouts/boilerplate')%>
<div id="map" style="width:100%; height: 500px"></div>
    <h1>All Tours</h1>
    <div>
        <a href="/tours/new">Create a New Tour</a>
    </div>

        <% for (let tour of tours)  {%>
          <div class="card mb-3" >
              <div class="row" >
                  <div class="col-md-4">
                     <% if(tour.images.length) {%>
                      <img class="img-fluid" alt="" src="<%=tour.images[0].url%>">
                      <%} else {%>

<img class="img-fluid" alt=""
    src="https://res.cloudinary.com/dh1xlb7vs/image/upload/v1610487878/Extour/wswxdyla13kblvocirs7.jpg">

                        <%} %>
                  </div>
                  <div class="col-md-8">
                      <div class="card-body">
                          <h5 class="card-title"><%=tour.title%></h5>
                          <h5 class="card-title"><%=tour.properties.popUpMarkup%></h5>
                          <p class="card-text"><%=tour.description%></p>
                          <p class="card-text"><small class="text-muted"><%=tour.location%></small></p>
                          <a class="btn btn-primary" href="/tours/<%=tour._id%>">View <%=tour.title%></a>

                      </div>
                  </div>
              </div>
          </div>
      <%  }%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const tours = { features: <%- JSON.stringify(tours) %> }
</script>

