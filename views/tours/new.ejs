<% layout('layouts/boilerplate')%>
<div class="row">
    <form action="/tours" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <h1 class="text-center">New Tour</h1>
        <div class="col-6 offset-3">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="tour[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="tour[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


 
            <div class="mb-3">
                <label class="form-label" for="price">Tour Price</label>
                <div class="input-group ">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="tour[price]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="tour[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

                     <div class="mb-3">
                         <div class="form-file custom-file">
                             <input type="file" class="form-file-input" id="image" name="image" multiple>
                             <label class="form-file-label" for="image">
                                 <span class="form-file-text custom-file-label">Choose image(s)...</span>
                                 <span class="form-file-button">Browse</span>
                             </label>
                         </div>
                     </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Tour</button>
            </div>



    </form>

    <a href="/tours">All Tours</a>

</div>
</div>